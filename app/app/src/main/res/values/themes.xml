<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CustomToolBar" parent="@style/Widget.AppCompat.Toolbar"><!--재목 색 변경-->
        <item name="titleTextColor">#000000</item>
    </style>
    <style name="Theme.ScheduleManagement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffffff</item> <!--제목 배경색 변경-->
        <item name="colorPrimaryVariant">#ffffff</item> <!-- 상태창 색 변경 -->
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> <!--상태창 글자색 변경 true = 검정 false = 흰색-->
        <item name="colorOnSecondary">@color/black</item>
        <item name="toolbarStyle">@style/CustomToolBar</item><!--재목 색 변경 위에 정의 되어 있음-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>